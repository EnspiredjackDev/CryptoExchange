# Example environment configuration for Crypto Exchange
# Copy this to .env and customize for your deployment

# Flask Configuration
FLASK_ENV=production
PORT=5000

# Database
DATABASE_URL=postgresql://username:password@localhost/exchange_db

# Security Configuration
ADMIN_API_KEY_HASH=your_admin_key_hash_here
RATE_LIMIT_AUTHENTICATED=60
RATE_LIMIT_PUBLIC=10
RATE_LIMIT_EXEMPT_LOCALHOST=true
MAX_REQUEST_SIZE=1048576
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# Logging
SECURITY_LOG_LEVEL=INFO
SECURITY_LOG_FILE=./logs/security.log

# Enable additional security features
ENABLE_BALANCE_INTEGRITY_CHECKS=true

# Coin Node Configurations
DOGE_NODE_HOST=your_doge_node_host
DOGE_NODE_PORT=22555
DOGE_NODE_USER=your_username
DOGE_NODE_PASS=your_password

DOGE_NAME=Dogecoin
DOGE_NETWORK=Dogecoin
DOGE_BLOCK_TIME=~1 minute
DOGE_CONFIRMATIONS=6
DOGE_ADDRESS_FORMAT=D
DOGE_DEFAULT_FEE=0.1

XMR_NODE_HOST=127.0.0.1
XMR_NODE_PORT=18083 # for the wallet RPC not the daemon
XMR_NODE_USER=your_username
XMR_NODE_PASS=your_password
XMR_NODE_TYPE=monero

XMR_NAME=Monero
XMR_NETWORK=Monero
XMR_BLOCK_TIME=~2 minutes
XMR_CONFIRMATIONS=6
XMR_ADDRESS_FORMAT=4, 8
XMR_DEFAULT_FEE=0.0001